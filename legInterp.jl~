#=



=#

O = 3
in_step = 2/(O-1)

u(x) = x^3 + x - 1

phi_1(x) = 1/sqrt(2)
phi_2(x) = sqrt(3/2)*x
phi_3(x) = 3*sqrt(5)/2*sqrt(2)*x^2 - sqrt(5)/2*sqrt(2)

phi = [phi_1, phi_2, phi_3]

xi = -1:in_step:1

V = zeros(O,O)

for i in 1:O
    for j in 1:O
        V[i,j] = phi[j](xi[i])
    end
end

u_v = [u(xi[j]) for j in 1:3]

u_coord = V\u_v

@show(V, u_v, u_coord)
