
function main()

    
    ##Parameters##
    
    #wave-speed
    a = 1.0
    #growth-speed?
    b = 0.0
    #flux parameter
    alpha = 0.0
    # Left side of the interval
    l = -1
    # Right side of the interval
    r = 1
    # Number of elements
    nk = 100
    # order of approximations
    np = 2
    # number of basis functions
    nb = nk + 1
    # Length of each element
    h = (r - l)/nk
    # elements as a range
    x = l:h:r

       
    ##Time parameters##
    
    # Total time
    T = .02
    # time step
    t_step = .1
    # time interval
    t_int = 0:t_step:T
    t_length = length(t_int)
    
    # solution to graph
    u_t = Array{Float64,1}[]

       

end
